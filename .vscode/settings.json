{
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/include",
        "${workspaceFolder}/build/vcpkg_installed/vcpkg/x64-linux/include",  // Adjust this path based on your vcpkg installation
        "${workspaceFolder}/build/vcpkg_installed/vcpkg/x64-windows/include"  // Adjust this path based on your vcpkg installation
    ],
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c11",
    "CMakeTools.cmakePath": "/usr/bin/cmake",
